{
  "name": "d1css",
  "version": "1.1.48",
  "description": "Functional CSS microframework",
  "main": "dist/d1.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build:css.raw": "postcss -c postcss.config.raw.json",
    "build:css": "postcss -c postcss.config.json",
    "minify:css": "postcss -u cssnano dist/d1.css -o dist/d1.min.css",
    "build:js": "uglifyjs --verbose --beautify --comments '/^\/*!/' --output ./dist/d1.js ./src/js/d1.js",
    "minify:js": "uglifyjs --comments '/^\/*!/' --output ./dist/d1.min.js ./src/js/d1.js",
    "build:insert-version": "cross-var replace-in-file \"/d1css v#/g\" \"d1css v$npm_package_version\" \"dist/*.*\" --isRegex",
    "build:docs-version": "cross-var replace-in-file \"/d1css@\\d+\\.\\d+\\.\\d+/g\" \"d1css@$npm_package_version\" \"docs/*.*\" --isRegex",
    "build": "npm run build:css.raw && npm run build:css && npm run minify:css && npm run build:js && npm run minify:js && npm run build:insert-version && npm run build:docs-version",
    "//prepublishOnly": "npm version patch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vvvkor/d1.git"
  },
  "keywords": [
    "css",
    "micro",
    "framework"
  ],
  "author": "Vadim Korolev <vadimkor@yandex.ru> (https://github.com/vvvkor)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vvvkor/d1/issues"
  },
  "homepage": "https://github.com/vvvkor/d1#readme",
  "dependencies": {
  },
  "devDependencies": {
    "cross-var": "^1.1.0",
    "cssnano": "^3.10.0",
    "perfectionist": "^2.4.0",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-discard-comments": "^2.0.4",
    "replace-in-file": "^3.4.2",
    "uglify-js": "^3.3.27"
  }
}
